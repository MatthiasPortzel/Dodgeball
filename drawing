var drawPlayer = function(x, y){
fill(255, 0, 0);
rect(x-29,y+20,27,7);
fill(0, 235, 172);
ellipse(x,y+26,27,27);
fill(143, 139, 13);
rect(x,y,20,54);
};
draw = function() {
    background(255, 255, 255);
    

};


var jump = 30;

var shoot = function(){
draw= function() {
    background(0);
    drawPlayer(379, mouseY);
    fill(0, 242, 255);
    ellipse(380-jump,mouseY+24,10,10);
    if(keyIsPressed&&keyCode===0){
        jump+=20;
    
    }
   if(jump>360){jump-=360;}
};


};
shoot();
